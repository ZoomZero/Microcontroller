void WaitSpm(char Command)
{  while(SPMCSR&1) WDR();
   SPMCSR=Command;
   asm("spm");
}

char ProgBuf[256];

void PageToUart0(char page)
{
 char cnt;
 const char *p;
 *p = (page<<8);
 while(1)
 {
  SymbolToUart0(p);
  if(++cnt == 0) break;
 }
}

void Load0(void)
{
 const char *p;
 char r;
 p = (const char *)0xE000; //адрес старта загрузчика
 r = 0;
 RAMPZ = 1;
 while(1)
 {
  ProgBuf[r] = *p++;
  if (++r == 0) break;
 }
 RAMPZ = 0;
 BufToFlash(0);
 PageToUart0(0);
}

void BufToFlash(void)
{
 CLI();	 //!!!!!!!
 asm("mov	r31, r16"); 
 asm("ldi	r30, 0x00"); 
   
 WaitSpm(0x03);//Стереть страницу  
 WaitSpm(0x11); 
	    	 
 Counter = 128;  
    
 asm("ldi r26, _ProgBuf");  
 asm("ldi r27, _ProgBuf+1");  
 while(1)
 {
   asm("ld r0,x+");
   asm("ld r1,x+");
   WaitSpm(0x01);
   Counter--;
   if(Counter)  asm("adiw r30, 2");
   else break;
  }
 
  asm("ldi	r30, 0x00"); 
  WaitSpm(0x05);//Писать 
  WaitSpm(0x11); 
  SEI();    
}

